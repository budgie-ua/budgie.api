{
  "skip_files": [
    "specs/*",
    "test/*",
    "lib/application.ex"
  ],
  "custom_stop_words": [
    "field",
    "has_one",
    "has_many",
    "embeds_one",
    "embeds_many",
    "schema",
    "send",
    "defdelegate",
    "def.+\\(:[^,]+\\).+@"
  ],
  "treat_no_relevant_lines_as_covered": true,
  "terminal_options": {
    "file_column_width": 120
  }
}
